<div class="" style="margin-top: 20px">
    <div class="container home-block" style=";margin-bottom: 20px; ">
        <div class="single" >
            <h2 style="text-align: center">Shop By Category</h2>
            {% set i = 0 %}
            {% for category in departs_category %}
            {% if i%6 == 0 %}
                <div class="row NoPadding category_block" >
            {% endif %}
                    <div class="col-sm-2 col-xs-6 ">
                        <div class="bullet_JR">{{ category.name }}</div>
                    </div>
            {% if (i%5 == 0) and  ( i > 0) %}
              </div>
            {% endif %}
                {% set i = i + 1 %}
            {% endfor %}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>