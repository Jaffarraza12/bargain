<div class="full-width top_bottom_margin" >
    <div class="container home-block singles" style=";margin-bottom: 20px; ">
      <h2 style="text-align: center">Shop By Department</h2>
      <div class="row NoPadding category_block" >
                {% set i = 1 %}
                {% for depart in departments %}

                        <div class="col-sm-2 col-xs-6 DepartmentBlock" >
                            <div class="">
                                <a href="{{ depart.href }}"><img src="https://via.placeholder.com/200X220&text={{ depart.name }}" alt="Promotion offer" class="img-responsive"/></a>
                            </div>
                        </div>
                      {%  if i%6 == 0 %}
                        <div class="clearfix"></div>
                      {% endif %}
                      {% set i = i + 1 %}
                {% endfor %}
            </div>
     </div>
     <div class="clearfix"></div>
</div>
