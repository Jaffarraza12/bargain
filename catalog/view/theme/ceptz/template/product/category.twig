{{ header }}
<div class="main-content full-width inner-page">
  <div class="background-content"></div>
  <div class="">
    <div class="shadow"></div>
    <div class="pattern">
      <div class="container">
      <div class="row">{{ column_left }}
            {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
            {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
            {% else %}
            {% set class = 'col-sm-12' %}
            {% endif %}{{ content_top }}
        <div  class="col-sm-9 tab-full-width">
            <div class="hidden-xs PADhidden manual-top-height"></div>
            {% include 'ceptz/template/custom/breadcrumb.twig' %}
             <h1 id="title-page" class="customPadding">{{ (depart_id  == 3) ? 'PRINTED ' : '' }}{{ heading_title }}{{ (depart_id  == 3) ? ' TSHIRTS' : '' }}</h1>

            <div class="clearfix"></div>
            <div class="product-filter clearfix">
                <span class="col-xs-4" style="padding-left:0px;">({{ product_total }} records found)</span>
                <a  class="col-xs-2 filter pointer MDhidden" onclick="openNav()" class="pointer"><icon class="fa fa-filter"></icon> Filter</a>
                <div class="list-options col-xs-6">
                    {% if sorts %}
                    <div class="sort">
                        <select id="input-sort" class="form-control" onchange="location = this.value;">
                            {% for sorts in sorts %}
                                {% if sorts.value == '%s-%s'|format(sort, order) %}
                                    `                           <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
                                {% else %}
                                    <option value="{{ sorts.href }}">{{ sorts.text }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                    {% endif %}
                </div>
            </div>

            {% if prompt_message %}
            <div class="hot-buy-header-container">
                <p>{{ prompt_message  }}</p>

            </div>
            {%  endif %}

                {%  if products %}
                <!-- Products grid -->
                <div class="product-grid product-listing-grid  active">
                    <div class="row">
                        {%  set i = 0 %}
                       {% for product in products %}
                           {%  set i = i + 1 %}
                           <div class=" {{ (depart_id == 8) ? 'col-sm-4' : 'col-sm-3' }}   {{ (product.fill_mobile_view) ? 'col-xs-12' : 'col-xs-6'  }}">
                          {% set right = 1  %}
                            {% if depart_id == 8 %}
                                {% include 'ceptz/template/item/productMeat.twig' with product %}
                            {% else %}
                                {% include 'ceptz/template/item/product.twig' with product %}
                            {% endif %}
                      </div>
                        {% if depart_id != 8 %}
                           {%  if i is divisible by(4) %}
                               <div class="clearfix"></div>
                               <br/>
                           {%  endif %}
                        {%  endif %}


                       {% endfor %}
                    </div>


                    {% if category_content %}
                    <div class="row">

                        <div class="panel-group" id="accordion">
                            {% set i = 1 %}
                            {%  for content in category_content %}
                             <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title"><a href="#question_{{ content.id }}" data-toggle="collapse" data-parent="#accordion" class="accordion-toggle{{ (i > 1 ) ? ' collapsed ' : '' }}" >{{ content.question }}     <i class="fa fa-caret-down"></i></a></h4>
                                </div>
                                <div class="panel-collapse collapse {{ (i==1) ? 'in' : '' }}"   id="question_{{ content.id }}" >
                                    <div class="panel-body">
                                        <p>{{ content.answer }}</p>
                                    </div>
                                </div>
                              </div>
                              {% set i = i + 1 %}
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}


                {% endif %}
              <div class="clearfix"></div>
              <div class="row">
                <div class="col-sm-6 text-left">{{ pagination }}</div>
                <div class="col-sm-6 text-right">{{ results }}</div>
              </div>
        </div>
              {{ content_bottom }}</div>
            {{ column_right }}



      </div>
          {% if related_categories_product %}
              <div class="row ">
                  <h2 class="CenterAlign"> RELATED PRODUCTS </h2>
                  <div class="custom-curosel">
                      <div class="container">
                          <div class="owl-carousel owl-theme product-grid related_categories_products">
                              {% for product in related_categories_product %}
                                  <div class="item">
                                      {% include 'ceptz/template/item/product.twig' with product %}
                                  </div>
                              {% endfor %}
                          </div>
                      </div>
                  </div>
              </div>
          {% endif %}





  </div>
  </div>
  </div>
  <a class="open-popup-link hidden" href="#content-to-open">Open Popup</a>
 <div id="content-to-open" class="white-popup white-background mfp-hide" style="width: 50%;margin:auto;">
    <div class="white-background">
        <div style="width: 50%;margin:auto;">
            <h2 class="text-center" style="margin-top: 10px;text-transform: uppercase;margin-top: 10px;text-transform: uppercase; font-weight: 800;font-size: 24px;padding:30px 0px 6px;">SELECT YOUR LOCATION </h2>
            <div >
                <div class="col-sm-3 col-xs-12">
                    <select name="city" id="city" disabled="disabled">
                        <option value="41">Karachi</option>
                    </select>
                </div>
                <div class="col-sm-3 col-xs-12">
                    <select name="area" id="area">
                        <option value="nna">North Nazimabad Block A</option>
                        <option value="nnb">North Nazimabad Block B</option>
                        <option value="nnc">North Nazimabad Block C</option>
                        <option value="nnd">North Nazimabad Block D</option>
                        <option value="nne">North Nazimabad Block E</option>
                        <option value="nnf">North Nazimabad Block F</option>
                        <option value="nng">North Nazimabad Block G</option>
                        <option value="nnh">North Nazimabad Block H</option>
                        <option value="nni">North Nazimabad Block I</option>
                        <option value="nnj">North Nazimabad Block J</option>
                        <option value="nnk">North Nazimabad Block K</option>
                        <option value="nnl">North Nazimabad Block L</option>
                        <option value="nnm">North Nazimabad Block M</option>
                        <option value="nnn">North Nazimabad Block N</option>
                        <option value="nno">North Nazimabad Block O</option>
                        <option value="nnp">North Nazimabad Block P</option>
                        <option value="nnq">North Nazimabad Block Q</option>
                        <option value="nnr">North Nazimabad Block R</option>
                        <option value="nns">North Nazimabad Block S</option>
                        <option value="nnt">North Nazimabad Block T</option>
                        <option value="gulshan-e-Iqbal">Gulshan-e-Iqbal</option>
                    </select>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="add-to-cart" style="text-align: center;padding-bottom:10px;margin: 8px 0px 0px;" >
                <button id="save_location" class="btn button save_location text-center" style="font-size:12px;background: #c00;color: #fff !important;">SAVE</button>
            </div>

        </div>
    </div>
</div>

{{ footer }}
    {% if depart_id == 8 %}
    <script>
        $(function(){
            $('.save_location').click(function(){
                $.ajax({
                    url: "index.php?route=common/meat/saveshipping",
                    type:'POST',
                    data:{'area':$('#area').val(),'city':$('#city').val()}
                }).success(function(resp) {
                    res = $.parseJSON(resp);
                    if (res.error == false){
                        location.reload();                }
                });
            });
            $('.open-popup-link').magnificPopup({
                type:'inline',
                showCloseBtn:true,
                midClick: true,
                enableEscapeKey:false,
                closeOnBgClick:false// Allow opening popup on middle mouse click. Always set it to true if you don't provide alternative source in href.
            });
            {% if meat_shipping_city is empty and meat_shipping_area is empty %}
            $('.open-popup-link').click()
            {% endif %}
        });
    </script>
    {% endif %}