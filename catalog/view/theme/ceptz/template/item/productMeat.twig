<style>
    .gainz-meat-add-to-cart{
        width: 45%;
        float: left;
        margin-top: 6px;
    }

    .gainz-meat-qty{
        width: 52%;
        float: left;
    }
</style>
<div class="product clearfix product-hover {% if right %} createrRight {% endif %} ">

    {%  if product.batch %}
        <div class="product-batch"></div>
    {%  endif %}
    {%  if product.deal %}
        <div class="product-batch-deal"></div>
    {%  endif %}
    {%  if product.hotbuy %}
        <div class="product-batch-hot"></div>
    {%  endif %}

    {%  if product.video_id %}
        <div class="product-video-icon"></div>
    {%  endif %}
    <div class="left">
        {% if percentage != 100 %}
            <div class="sale">
                {{ percentage|round  }}%
            </div>
        {% endif %}

    <div class="image image-swap-effect {{ (product.is_zoom) ? 'img-zoom-effect' : '' }} ">
      <a href="{{ product.href }}">
          {% if product.ampImage == 1 %}
              <amp-img src="{{ product.thumb }}" alt="{{ product.name }}"  width="228" height="228" layout="responsive">
                  <i-amphtml-sizer style="display: block;"></i-amphtml-sizer>
              </amp-img>
          {%  else %}
              <img src="{{ product.thumb }}" alt="{{ product.name }}"  width="228" height="228" />
          {%  endif %}
      </a>
    </div>
  </div>
  <div class="right relative">
    <div class=" {{ (product.fill_mobile_view) ? 'single_row' : '' }}">
        <a class="fs18" href="{{ product.href }}">{{ product.name }}</a>
    </div>


    <div class="new_price" style="font-size: 18px;">
        {%  if product.special  %}
        <span><span class="hot-price-new">{{ product.special }}</span><span class="hot-price-old">{{ product.price }}</span> per KG</span>
        {%  else %}
          <span class="hot-price-new">{{ product.price }} per {{ product.price_type }}</span>
       {% endif %}
    </div>
      <div class="clearfix"></div>
      {% for i in 5 %}
          {% if product.rating == i %}
            <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
            <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
      {% endfor %}
      {% if product.rating %}
        <div class="rating"><i class="fa fa-star {% if product.rating >= 1 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 2 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 3 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 4 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 5 %} {{  ' active' }} {% endif %}"></i></div>
      {% else %}
        <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
      {% endif %}
      <div class="">
          <div class="gainz-meat-qty" >
              <div class="number-rows">
                  <div class="dec_button int-dec-button" data-operation="-">
                      <a><icon class="fa fa-minus"></icon></a></div>
                  <input class="product_qty_{{ product.product_id }}" min="1" type="number" name="quantity" id="quantity_wanted" size="2" value="{{ minimum  }}" />
                  <div class="inc_button int-dec-button" data-operation="+"><a><icon class="fa fa-plus"></icon></a></div>
                  <span id="id_qty" class="qty-container"></span>
              </div>
          </div>
          <div class="button-overflow gainz-meat-add-to-cart" >
              <button class="button btn-cart button-add-cart"  data-id="{{ product.product_id }}">{{ 'Add To Cart '  }} </button>
          </div>


      </div>

  </div>
</div>