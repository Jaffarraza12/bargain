<div class="product clearfix product-hover {% if right %} createrRight {% endif %} ">
    {%  if product.batch %}
        <div class="product-batch"></div>
    {%  endif %}
     
    {%  if product.video_id %}
        <div class="product-video-icon"></div>
    {%  endif %}

    <div class="left">

    <div class="image image-swap-effect {{ (product.is_zoom) ? 'img-zoom-effect' : '' }} ">
      <a href="{{ product.href }}">
                  <amp-img src="{{ product.thumb }}" alt="{{ product.name }}"  width="228" height="228" layout="responsive">
                      <i-amphtml-sizer style="display: block;"></i-amphtml-sizer>
                  </amp-img>
      </a>
    </div>
  </div>
  <div class="right">
    <div class="name"><a href="{{ product.href }}">{{ product.name }}</a></div>
    <div class="price">
        {% if not product.special %}
            {{ product.price }}
        {% else %}

          <span class="hot-price hot-price-old">{{ product.price }}</span>
          <span class="hot-price hot-price-new">{{ product.special }}</span>
          <span class="hot-price hot-price-save">You Save - {{ product.save }}</span>
        {% endif %}
    </div>
      {% for i in 5 %}
          {% if product.rating == i %}
            <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
            <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
      {% endfor %}
      {% if product.rating %}
        <div class="rating"><i class="fa fa-star {% if product.rating >= 1 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 2 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 3 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 4 %} {{  ' active' }} {% endif %}"></i><i class="fa fa-star{% if product.rating >= 5 %} {{  ' active' }} {% endif %}"></i></div>
      {% else %}
        <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
      {% endif %}
    <div class="only-hover SMhidden">
      <div class="button-overflow">
        <a href="{{ product.href }}" class="button btn-cart">{{ 'Shop Now'  }} </a>
      </div>
      <ul style="display: none" >
        <li><a onclick="wishlist.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to wishlist"><i class="fa fa-heart"></i></a></li>

        <li><a onclick="compare.add('{{ product.product_id }}');" data-toggle="tooltip" data-original-title="Add to compare"><i class="fa fa-exchange"></i></a></li>

        <li class="quickview"><a href="index.php?route=product/quickview&product_id={{ product.product_id }}" data-toggle="tooltip" data-original-title="Quickview"><i class="fa fa-search"></i></a></li>
      </ul>
    </div>
  </div>
</div>